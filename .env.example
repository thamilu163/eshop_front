# Frontend Environment Variables Template
# Copy this file to .env.local for local development

# ===========================================
# API Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8082
BACKEND_API_URL=http://localhost:8082
NEXT_PUBLIC_API_TIMEOUT=30000

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=E-Commerce Platform
APP_VERSION=1.0.0
SERVICE_NAME=ecommerce-frontend

# ===========================================
# Keycloak Authentication (REQUIRED)
# ===========================================
# Keycloak server base URL (without trailing slash)
KEYCLOAK_AUTH_SERVER_URL=https://keycloak.example.com

# Keycloak realm name
KEYCLOAK_REALM=ecommerce

# OAuth2 client ID
KEYCLOAK_CLIENT_ID=ecommerce-frontend

# OAuth2 client secret (only for confidential clients)
# Leave empty for public clients
KEYCLOAK_CLIENT_SECRET=

# ===========================================
# Session Management (REQUIRED)
# ===========================================
# Secret key for session encryption (minimum 32 characters)
# Generate with: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-secure-random-string-at-least-32-chars

# ===========================================
# Logging & Observability
# ===========================================
# Minimum log level: debug | info | warn | error
LOG_LEVEL=info

# ===========================================
# Sentry Error Tracking
# ===========================================
# Get your DSN from https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# ===========================================
# Security Headers (Optional)
# ===========================================
# Content Security Policy header value
# CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'"

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=false

# ===========================================
# Third-Party Services (Optional)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Cloudinary (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=
